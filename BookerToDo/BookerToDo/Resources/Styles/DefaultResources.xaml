<?xml version="1.0" encoding="UTF-8"?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="BookerToDo.Resources.Styles.DefaultResources">

    <!-- HEIGHTS -->
    <x:Int32 x:Key="height50">50</x:Int32>
    <x:Double x:Key="height64">64</x:Double>
    <x:Double x:Key="height160">160</x:Double>

    <!-- WIDTHS -->
    <x:Double x:Key="width64">64</x:Double>

    <!-- SPACINGS -->
    <x:Double x:Key="spacing6">6</x:Double>

    <!-- RADIUSES -->
    <x:Int32 x:Key="radius32">32</x:Int32>
    
    <!-- STYLES -->
    <Style x:Key="buttonStyle1" TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource appcolor1}"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource appcolor2}"/>
        <Setter Property="TextTransform" Value="None"/>
    </Style>

</ResourceDictionary>